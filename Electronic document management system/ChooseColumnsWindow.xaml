<Window x:Class="Electronic_document_management_system.ChooseColumnsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Electronic_document_management_system"
        mc:Ignorable="d"
        Title="Выбор колонок таблицы" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel x:Name="mainStackPanel" HorizontalAlignment="Left" Margin="10,10,10,60" VerticalAlignment="Top" />
        <Button x:Name="AgreeButton" Content="Подтвердить выбор" HorizontalAlignment="Left" Margin="10,10,10,10" VerticalAlignment="Bottom" Click="AgreeButton_Click"/>
    </Grid>
</Window>

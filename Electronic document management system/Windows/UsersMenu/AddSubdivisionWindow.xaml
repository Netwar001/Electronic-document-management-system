<Window x:Class="Electronic_document_management_system.AddSubdivisionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Electronic_document_management_system"
        mc:Ignorable="d"
        Title="Добавление подразделений" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Подразделение" HorizontalAlignment="Center" Margin="0,10,0,10" VerticalAlignment="Top" FontSize="36"/>
        <UniformGrid x:Name="DataPanel" HorizontalAlignment="Left" Margin="10,75,10,20" VerticalAlignment="Top" Columns="2">
            <Label Content="Наименование" FontSize="14" Margin="0,10,0,10"/>
            <TextBox x:Name="subdivisionName" Margin="10,10,0,10"/>
            <Label Content="ФИО руководителя подразделения" FontSize="14" Margin="0,10,0,10"/>
            <TextBox x:Name="leaderName" Margin="10,10,0,10"/>
            <Button x:Name="SaveBtn" Content="Сохранить" Width="120" HorizontalAlignment="Left" Click="SaveBtn_Click"/>
        </UniformGrid>
    </Grid>
</Window>
